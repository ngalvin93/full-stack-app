{{! Create New Cohort Form }}
<h3>Create new cohort</h3>
  <form action="/cohorts" method="post">
    <label>Cohort Name:</label>
    <input type="text" name="title" />

    <label>Slug:</label>
    <input type="text" name="slug" />

    <button type="submit">Add Cohort</button>
  </form>

{{! Find Student by id Form }}
<h3>Find student by id</h3>
  <form id="student-id-form" action="" method="GET" onSubmit="return searchById()">
    <label>Student id:</label>
    <input type="text" name="student-id" id="id-value"/>
    <button type="submit">Search</button>
  </form>

  <script>
    function searchById () {
      let id = document.getElementById('id-value').value;
      location.href = '/students/' + id;
      return false;
    }
  </script>

